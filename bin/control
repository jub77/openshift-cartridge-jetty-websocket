#!/bin/bash -e

function start {
    cd $OPENSHIFT_REPO_DIR
    nohup mvn8 -Popenshift jetty:run >> $OPENSHIFT_JETTY_DIR/logs/jetty.log 2>&1 &
}

function stop {
    killall java || true
}

function restart {
    stop
    start
}

function build {
    # Workaround for failure in npm install when a package in package.json
    # points to a git commit.
    # This issue occurs because we are running in the context of a
    # git post receive-hook
    unset GIT_DIR
    unset GIT_WORK_TREE

    cd $OPENSHIFT_REPO_DIR
    mvn8 compile -Popenshift -DskipTests=true
}

function tidy {
    cd $OPENSHIFT_REPO_DIR
    mvn8 clean -Popenshift
    rm -fr "$OPENSHIFT_HOMEDIR"/.m2/*
}

function catchall {
    echo ""
}

export JAVA_HOME=/etc/alternatives/java_sdk_1.8.0
export PATH=$JAVA_HOME/bin:$PATH

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
